# Copy this file to `.env.local` and fill in values.
#
#   cp env.example .env.local
#

## Shopify (Storefront API)
# Your store domain, e.g. "your-store.myshopify.com"
NEXT_PUBLIC_SHOPIFY_STORE_DOMAIN=

# Storefront API access token
NEXT_PUBLIC_SHOPIFY_STOREFRONT_TOKEN=

## Shopify Admin (optional)
SHOPIFY_ADMIN_ACCESS_TOKEN=

## NextAuth (optional)
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

## Customer Accounts / OIDC (optional)
CUSTOMER_ACCOUNTS_ENABLED=false
SESSION_SECRET=
SHOPIFY_CA_CLIENT_ID=
SHOPIFY_CA_AUTH_URL=
SHOPIFY_CA_TOKEN_URL=
SHOPIFY_CA_LOGOUT_URL=
SHOPIFY_CA_REDIRECT_URI=
SHOPIFY_CA_REDIRECT_URI_LOCAL=
SHOPIFY_CA_CUSTOMER_API_URL=
SHOPIFY_CA_SCOPES=openid email customer-account-api:full

## Forms -> Google Sheets (service account)
# Spreadsheet ID (the part after `/d/` in the URL).
GOOGLE_SHEETS_SPREADSHEET_ID=

# Service account email (e.g. "forms-writer@your-project.iam.gserviceaccount.com")
GOOGLE_SERVICE_ACCOUNT_EMAIL=

# IMPORTANT: keep the \n sequences (no real newlines).
# Wrap in quotes if your shell/env loader requires it.
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n"
